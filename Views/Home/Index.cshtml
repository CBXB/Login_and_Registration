@{
    ViewData["Title"] = "Home Page";
}

@model User

<div class="registration">
    <h3>Register</h3>
    <form asp-action="Register" asp-controller="Home" method="post" class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control">
        <span asp-validation-for="FirstName" class="text-danger"></span>
        <br>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control">
        <span asp-validation-for="LastName" class="text-danger"></span>
        <br>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
        <p style="color:red;">@ViewBag.EmailError</p>
        <br>
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control">
        <span asp-validation-for="Password" class="text-danger"></span>
        <br>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <br>

        <input type="submit" class="btn btn-primary btn-lg" id="submitbtn" value="Submit">
    </form>
</div>

<div class="login">
    <h3>Login</h3>
    <form asp-action="ProcessLogin" asp-controller="Home" method="post" class="form-group">
        <label asp-for="LoginEmail"></label>
        <input asp-for="LoginEmail" class="form-control">
        <span asp-validation-for="LoginEmail" class="text-danger"></span>
        <br>
        <label asp-for="LoginPassword"></label>
        <input asp-for="LoginPassword" class="form-control">
        <span asp-validation-for="LoginPassword" class="text-danger"></span>
        <br>
        <input type="submit" class="btn btn-primary btn-lg" id="submitbtn" value="Submit">
    </form>
</div>